<h2><%= @user.username %>'s orders</h2>

<% if @user.orders.count == 0 %>
    <p>
        <%= @user.username %> does not currently have any orders
    </p>
<% else %>
    <% @user.orders.each do |order| %>
        <p>
            Order ID: <%= order.id %>, Address: <%= order.address %>
            <%= link_to 'Edit', [:edit, order] %>
            <%= link_to 'Cancel',
                        order,
                        method: :delete,
                        data: { confirm: 'Are you sure you want to cancel this booking?' }
            %>
        </p>
    <% end %>
<% end %>